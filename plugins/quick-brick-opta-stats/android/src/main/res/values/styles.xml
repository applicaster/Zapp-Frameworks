        <item name="android:textColor">@color/title_highlight</item>
    </style>

    <style name="Theme.Opta.HighlightSmallTitle">
        <item name="customtypeface">bebasneue-bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
