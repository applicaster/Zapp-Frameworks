{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "ESNext"
        ],
        "sourceMap": true,
        "jsx": "react-native",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@applicaster/applicaster-types",
            "./types"
        ],
        "types": [
            "./types"
        ],
        "outDir": "./lib",
        "rootDir": "./src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}